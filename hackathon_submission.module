    return FALSE;
  else
    /*if (substr_count($file_name, ".") > 1)
      return FALSE;
    else*/
    return TRUE;
}

function hs_check_special_characters($string){
    //$whiteListed = "\#\^\+\-\_\.\&()%\/";
